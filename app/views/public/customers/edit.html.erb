<div class="inner container col-12 w-75">
  <div class="title mt-5">
    <b><%= current_customer.user_name %>さんの登録内容編集</b>
  </div>

  <%= render 'layouts/error_messages', resource: @customer %>

  <%= form_with model: @customer, url: customers_infomation_path(@customer), method: :patch do |f| %>
    <div class="form col-10 mt-3">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name, class: "form-control" %></td>
            <td><%= f.text_field :first_name, class: "form-control" %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana, class: "form-control" %></td>
            <td><%= f.text_field :first_name_kana, class: "form-control" %></td>
          </tr>
          <tr>
            <td>ユーザーネーム</td>
            <td><%= f.text_field :user_name, class: "form-control" %></td>
            <td colcpan="2"></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td colcpan="2"><%= f.email_field :email, class: "form-control" %></td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="action text-center">
      <%= f.submit "変更登録", class: "btn btn-success btn-sm w-50" %>
    </div>
  <% end %>
</div>