<div class="inner container w-75">
  <div class="title mt-5">
    <b><%= current_customer.user_name %>さんのマイページ</b>
  </div>

  <div class="form col-10 mt-4">
    <table class="table table-striped">
      <tbody>
        <tr>
          <td>氏名</td>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <td>ユーザーネーム</td>
          <td><%= @customer.user_name %></td>
        </tr><tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>

    <div class="action text-center">
      <span>投稿一覧</span>
      <%#= link_to "ブックマーク一覧", customers_bookmark_path, class: "btn btn-primary btn-sm ml-2" %>
      <%= link_to "編集", customers_infomation_edit_path, class: "btn btn-success btn-sm  ml-1 px-4" %>
      <%= link_to "退会", customers_unsubscribe_path, class: "btn btn-danger btn-sm ml-1 px-4" %>
    </div>
  </div>
</div>