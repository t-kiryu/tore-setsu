<div class="inner container">
  <div clas="title mt-5">
    <h2>スレッド一覧</h2>
  </div>

  <div class="form mt-4">
    <div class="keyword-search text-right">
      <%= form_tag(admin_posts_path, :method => "get") do %>
        <%= text_field_tag :search %>
        <%= submit_tag "検索！" ,:introduction => nil ,class: "button is-info"%>
      <% end %>
    </div>

    <table class="table table-hover mt-4">
      <thead class="thead-dark">
        <tr>
          <th>投稿日時</th>
          <th>投稿ユーザー</th>
          <th>タイトル</th>
          <th>コメント数</th>
        </tr>
      </thead>

      <% @posts.each do |post| %>
        <tbody>
          <tr>
            <td><%= l post.created_at %></td>
            <td><%= post.customer.user_name %></td>
            <td><%= link_to post.title, admin_post_path(post.id) %></td>
            <td><%= post.post_comments.count %>件</td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>

  <div class="paginate mt-4" %>
    <%= paginate @posts %>
  </div>

</div>