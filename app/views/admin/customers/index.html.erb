<div class="inner container w-75">
  <div class="title mt-5">
    <h2>会員一覧</h2>
  </div>

  <div class="form mt-4">
    <table class="table table-hover">
      <thead class="thead-dark">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>ユーザーネーム</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <% @customers.each do |customers| %>
        <tbody>
          <tr>
            <td><%= customers.id %></td>
            <td><%= customers.full_name %></td>
            <td><%= link_to customers.user_name, admin_customer_path(customers.id) %></td>
            <td><%= customers.email %></td>
            <td>
              <% if customers.is_deleted %>
                <b><%= "退会" %></b>
              <% else %>
                <b><%= "有効" %></b>
              <% end %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>

  <div class="paginate mt-4" %>
    <%= paginate @customers %>
  </div>

</div>