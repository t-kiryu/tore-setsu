<div class="inner container col-12 w-75">
  <div class="title">
    <h3><%= @customer.user_name %> さんの登録内容編集</h3>
  </div>

  <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
    <div class="form col-10">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th></th>
            <td></td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name, class: "form-control" %></td>
            <td><%= f.text_field :first_name, class: "form-control"  %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana, class: "form-control"  %></td>
            <td><%= f.text_field :first_name_kana, class: "form-control"  %></td>
          </tr>
          <tr>
            <td>ユーザーネーム</td>
            <td colcpan="2"><%= f.text_field :user_name, class: "form-control"  %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td colcpan="2"><%= f.email_field :email, class: "form-control"  %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td>
              <%= f.radio_button :is_deleted, false %> <%= f.label :is_deleted, "有効" %>
              <%= f.radio_button :is_deleted, true %> <%= f.label :is_deleted, "退会" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <%= f.submit "変更登録", class: "btn btn-success btn-sm" %>

  <% end %>
</div>